{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "strict": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs", // "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": ["node_modules"]
}
